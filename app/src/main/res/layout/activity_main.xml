<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_png11"
android:orientation="vertical"
tools:context="com.example.mohsinhussain.whereyatt.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1.5"
    android:gravity="right"
    android:orientation="vertical"
    android:background="#883F51B5"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/settings_icon"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="5dp"
        android:id="@+id/setting"
        android:background="?selectableItemBackgroundBorderless"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight=".9"
    android:orientation="vertical"
    android:background="#883F51B5"
    android:gravity="top"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/logo_2"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        />

</LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/back_shape"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/pl"
                android:src="@drawable/police_icon"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#fff"
                android:text="POLICE ENC"
                android:layout_height="match_parent"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/back_shape"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/l"
                android:src="@drawable/lonely_icon"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#fff"
                android:text="LONELY"
                android:layout_height="match_parent"
                />
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@drawable/back_shape"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/back_shape"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/lit"
                android:src="@drawable/itslit_icon"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#fff"
                android:text="IT'S LIT"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/back_shape"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/s"
                android:src="@drawable/scared_icon"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="#fff"
                android:text="SCARED"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1.45"
    android:background="@drawable/back_shape"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="CUSTOM"
        android:textColor="#fff"
        android:textSize="23dp"
        android:id="@+id/c"
        android:background="?selectableItemBackgroundBorderless"
        />

</LinearLayout>



</LinearLayout>

